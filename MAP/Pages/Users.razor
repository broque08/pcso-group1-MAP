@layout UserLayout
@page "/"
@inject NavigationManager NavigationManager

<PageTitle>User</PageTitle>

<style>
    body {
        background-color: #37474F;
    }
</style>

<center>
<MudContainer Class="d-flex align-center justify-center mud-width-full"  style="height:70vh;">
<MudCard Outlined="true" Square="false"  Style="width: 450px; height: 400px" Class="border-double border-4 mud-border-warning pa-4" Elevation="0">
<br />
<MudImage Src="Images/pcso.png" Width="150" Height="150" Elevation="25" Class="rounded-lg ma-20"/>
<br /><br /><br />
<MudPaper Class="pa-md-2 mx-lg-auto mud-theme-warning" Style="width: 350px; height: 45px" >
<MudText Typo="Typo.h5"><b>Medical Access Program</b></MudText>
</MudPaper>
<br/><br />
      
<MudButton Variant="Variant.Filled" class="py-2 px-7 mx-2 rounded-xl" StartIcon="@Icons.Material.Filled.Person" Style="@($"color:{Colors.Yellow.Accent3}; background:{Colors.BlueGrey.Darken4};")" Size="Size.Large"  @onclick="Patient">Patient</MudButton>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<MudButton Variant="Variant.Filled" class="py-2 px-6 mx-2 rounded-xl" StartIcon="@Icons.Material.Filled.Badge" Style="@($"color:{Colors.Yellow.Accent3}; background:{Colors.BlueGrey.Darken4};")" Size="Size.Large" @onclick="EmployeeLogIn">Employee</MudButton>
</MudCard>   
</MudContainer>
</center>

@code{
    private void EmployeeLogIn()
    {
        NavigationManager.NavigateTo("/EmployeeLogIn");
    }
    private void Patient()
    {
        NavigationManager.NavigateTo("/Patient");
    }
    
     }